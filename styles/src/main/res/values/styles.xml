<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TripTextViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewBigStyle" parent="TripTextViewStyle">
        <item name="android:background">@drawable/big_text_view_shape</item>
        <item name="android:maxWidth">315dp</item>
    </style>

    <style name="TextViewSmallStyle" parent="TripTextViewStyle">
        <item name="android:background">@drawable/small_text_view_shape</item>
        <item name="android:maxWidth">136dp</item>
    </style>

    <style name="TripButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="BigOrangeButtonStyle" parent="TripButtonStyle">
        <item name="android:background">@drawable/big_button_shape</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/btn_blue</item>
    </style>

    <style name="RoundButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/btn_green</item>
    </style>

    <style name="RedRoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/btn_red</item>
        <item name="colorButtonNormal">#D3021B</item>
        <item name="colorControlHighlight">#AD1457</item>
    </style>

    <style name="SmallOrangeButtonStyle" parent="TripButtonStyle">
        <item name="android:background">@drawable/small_button_shape</item>
    </style>

    <style name="BackgroundTripView" parent="TripButtonStyle">
        <item name="android:minHeight">45dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:background">@drawable/layout_bg</item>
    </style>

    <style name="BackgroundCreateTripText" parent="TripButtonStyle">
        <item name="android:minHeight">0dp</item>
        <item name="android:maxHeight">200dp</item>
        <item name="android:background">@drawable/layout_bg</item>
    </style>

    <style name="LocationButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/ic_baseline_add_location_24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>